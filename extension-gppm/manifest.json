{
  "manifest_version": 3,
  "name": "Tiki Product Sidebar",
  "version": "1.0",
  "description": "Sidebar hiển thị thông tin sản phẩm từ Tiki",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Mở Sidebar"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://tiki.vn/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.css", "sidebar.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
